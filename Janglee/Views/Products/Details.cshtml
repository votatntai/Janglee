@model Janglee.Models.DTO.Product

@{
    ViewData["Title"] = "Details";
}

<section>

    <div class="card">

        <div class="row">

            <div class="col-md-6 my-auto">
                <img class="img-fluid rounded-left" src="/img/@Html.DisplayFor(model => model.Image)" alt="Product image">
            </div>

            <div class="col-md-6 p-5 align-self-center">

                <h5 class="font-weight-normal mb-3 font-weight-bold">Products Detail</h5>

                <p class="text-muted">
                    Out or geared it but to best up samples the for she phase of copy would do in divine
                    of taken and the take medical or upper at him in the logbook were, we price his mostly to commas.
                </p>

                <form class="my-5">
                    <div class="my-3">
                        <label>Product Name</label>
                        <input asp-for="ProductName" type="text" class="form-control" readonly>
                    </div>
                    <div class="my-3">
                        <label>@Html.DisplayNameFor(model => model.Price)</label>
                        <input asp-for="Price" type="number" step="0.1" class="form-control" readonly>
                    </div>
                    <div class="my-3">
                        <label>@Html.DisplayNameFor(model => model.Quantity)</label>
                        <input asp-for="Quantity" type="number" step="1" class="form-control" readonly>
                    </div>
                    <div class="mt-3 text-center">
                        <a class="btn btn-md btn-outline-dark btn-rounded" asp-action="Index">Back to List</a>
                    </div>
                </form>

            </div>

        </div>

    </div>

</section>
