@model IEnumerable<Janglee.Models.DTO.Product>


@{
    ViewData["Title"] = "Index";
}

<div class="my-5">
    <div class="container card card-cascade narrower scrollbar-ripe-malinka">
        <div class="view view-cascade gradient-card-header blue-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-center">
            <h3 class="white-text mx-3 my-3 font-weight-bold">Products</h3>
            <a class="btn btn-sm btn-rounded btn-outline-light mx-3 my-3" asp-action="Create">Create</a>
        </div>
        <div class="px-4">
            <div class="table-wrapper table-responsive">
                <table class="table table-hover mb-0 text-center">
                    <thead>
                        <tr class="text-uppercase">
                            <th class="th-lg text-center font-weight-bold">
                                @Html.DisplayNameFor(model => model.ProductName)
                            </th>
                            <th class="th-lg text-center font-weight-bold">
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th class="th-lg text-center font-weight-bold">
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th class="th-lg text-center font-weight-bold">Modify</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-rounded btn-outline-primary" asp-action="Edit" asp-route-id="@item.ProductID">Edit</a>
                                    <a class="btn btn-sm btn-rounded btn-outline-green" asp-action="Details" asp-route-id="@item.ProductID">Details</a>
                                    <a class="btn btn-sm btn-rounded btn-outline-danger" asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
