@model Janglee.Models.DTO.Product

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-12">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <form class="form-elegant my-3" asp-action="Create" id="form-create">
                    <div class="card-body mx-4">
                        <div class="card testimonial-card">
                            <div class="card-body">
                                <h4 class="card-title">Create Product</h4>
                                <hr>
                                <p>Fill in all the forms below and then select photos to add equipment.</p>
                            </div>
                        </div>
                        <div class="my-5">
                            <div class="md-form">
                                <input asp-for="ProductName" type="text" required class="form-control">
                                <label>Product Name</label>
                            </div>
                            <div class="md-form">
                                <input asp-for="Price" type="number" step="0.1" required class="form-control">
                                <label>Price</label>
                            </div>
                            <div class="md-form">
                                <input asp-for="Quantity" type="number" step="1" required class="form-control">
                                <label>Quantity</label>
                            </div>
                            <div class="custom-file">
                                <input asp-for="Image" type="file" class="custom-file-input" id="customFileLang"
                                       lang="us" required>
                                <label class="custom-file-label" for="customFileLang">Image</label>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit"
                                    class="btn btn-outline-secondary btn-block btn-rounded  waves-effect waves-light"
                                    style="border-radius: 30px;">
                                Create
                            </button>
                        </div>
                        <div class="justify-content-center mt-3">
                            <a asp-action="Index" class="btn btn-outline-light-blue btn-block btn-rounded waves-effect waves-light"
                               style="border-radius: 30px;">
                                Back
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
